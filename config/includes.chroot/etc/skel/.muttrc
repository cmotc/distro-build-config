#Load the Solarized Dark Color Scheme
source $HOME/.config/mutt/colors/mutt-colors-solarized-dark-256.muttrc

#Load your email from the server
source $HOME/.spoolfile
#source "gpg --decrypt --quiet --no-tty $HOME/.spoolfile.gpg"

#Automatically log in to this mailbox at startup

#Set up folders
set record="=Sent"
set postponed="=Drafts"
set trash="=Trash"

# Enable SSL/TLS, StartTLS
source $HOME/.config/mutt/muttssl

# Enable GPG
#source $HOME/.config/mutt/muttgpg

set sort = threads
set sort_aux = last-date-received