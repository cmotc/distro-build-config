#! /bin/sh

if [ -f /usr/bin/srm ]; then
	alias rm=/usr/bin/srm
fi
if [ -f "$1" ]; then
	export $(cat "$1" | grep "work_dir")
	mv -v "$work_dir/cert.pem" "$work_dir/cert.pem.old"
else
	export $(cat "$HOME/.xombrero.conf" | grep "work_dir")
	if [ -z "$work_dir" ]; then
		work_dir="$HOME/.xombrero/"
	fi
	if [ -d "$work_dir" ]; then
		mv -v "$HOME/.xombrero/cert.pem" "$HOME/.xombrero/cert.pem.old"
	else
		mkdir $work_dir
	fi
fi

SYSTEM_CERTS=$(find /etc/ssl/certs -name *.pem 2> /dev/null)
for pem in $SYSTEM_CERTS; do
	if [ "$1" != "q" ]; then
		echo "libssl provided a certificate, $pem."
		echo "Should I add this to your certificates?"
		if [ "$1" = "v" ]; then
			cat "$pem"
			echo "Review Certificate and press Enter to continue"
			if [ $ANSWER = "yes" ]; then
				cat "$pem" >> "$work_dir/cert.pem"		
			fi
		else
			cat "$pem" >> "$work_dir/cert.pem"
		fi
	else
		cat "$pem" >> "$work_dir/cert.pem"
	fi
done

TOR_CERT=$(find / -name torproject.pem 2> /dev/null)
TOR_CERT_CAT=$(echo "$TOR_CERT" | grep -v "$HOME/Projects")
if [ "$1" != "q" ]; then
	echo "Possible Tor Project Certificate found in $TOR_CERT_CAT."
	echo "Should I add this to your certificates?"
	if [ "$1" = "v" ]; then
		cat "$TOR_CERT_CAT"
		echo "Review Certificate and press Enter to continue"
		if [ $ANSWER = "yes" ]; then
			cat "$TOR_CERT_CAT" >> "$work_dir/cert.pem"		
		fi
	else
		cat "$TOR_CERT_CAT" >> "$work_dir/cert.pem"		
	fi
else
	cat "$TOR_CERT_CAT" >> "$work_dir/cert.pem"
fi

cache(){
	if [ "$1" = "v" ] || [ "$1" = "q" ]; then
		echo -n " "
	elif [ "$1" = "c" ]; then
		DATE=$(date +%Y%m%d)
		if [ -f "$2" ]; then
			export $(cat "$1" | grep "work_dir")
			mv -v "$work_dir/cert.pem.old" "$work_dir/cert_cache/cert$DATE.pem"
		elif [ -d "$work_dir" ]; then
			mv -v "$work_dir/cert.pem.old" "$work_dir/cert_cache/cert$DATE.pem"
		fi
	else
		echo -n " "
	fi
}

custom_file(){
	if [ -f "$1" ]; then
		export $(cat "$1" | grep "ssl_ca_file")
		if [ -z "$ssl_ca_file" ]; then
			export $(cat "$1" | grep "work_dir")
			if [ -f "$ssl_ca_file" ]; then
				echo "Existing TLS Certificates found."
			else
				if [ -d "$work_dir" ]; then
					echo "ssl_ca_file	 = $work_dir/cert.pem" >> "$1.conf"
				fi
			fi
			cache "$2" "$1"
			clear_cache "$2" "$1"
		fi
	fi
}

clear_cache(){
	if [ "$1" = "cc" ]; then
		if [ -f "$2" ]; then
			export $(cat "$1" | grep "work_dir")
		fi
		if [ -d "$work_dir/cert_cache" ]; then
			rm -v "$work_dir/cert_cache/*"
		fi
	fi
}

FILE_LIST="$HOME/.xombrero.conf 
$HOME/.insecure.conf 
$1 
$2 "

for f in $FILE_LIST; do
	if [ -z "$1" ]; then
		custom_file "$f" "$1"
	elif [ -z "$2" ]; then
		custom_file "$f" "$2"
	elif [ -z "$3" ]; then
		custom_file "$f" "$3"
	fi
done

rm -v "$work_dir/cert.pem.old"